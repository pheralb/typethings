{
  "name": "@typethings/workspace",
  "author": "@pheralb_",
  "type": "module",
  "description": "A beautiful, minimal, and fast text editor built with Tauri.",
  "private": true,
  "packageManager": "pnpm@8.6.10",
  "scripts": {
    "typecheck-app": "cd app && pnpm typecheck",
    "typecheck-editor": "cd packages/editor && pnpm typecheck",
    "typecheck-ui": "cd packages/ui && pnpm typecheck",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "cd website && pnpm dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "1.12.2",
    "@types/node": "20.11.15",
    "@types/react": "18.2.51",
    "@types/react-dom": "18.2.18",
    "@typethings/tailwind-config": "workspace:*",
    "eslint": "8.56.0",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.5.11",
    "turbo": "latest"
  }
}
